  <script>
    document.getElementById("year").textContent = new Date().getFullYear();

    const fadeEls=[...document.querySelectorAll(".fade-up")];
    const io=new IntersectionObserver(entries=>{
      entries.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add("visible"); io.unobserve(e.target); }});
    },{threshold:.15});
    fadeEls.forEach(el=>io.observe(el));

    const sticky=document.getElementById("sticky");
    const hero=document.getElementById("hero");
    new IntersectionObserver(entries=>{
      entries.forEach(e=>{
        sticky.style.transform = e.isIntersecting ? "translateY(100%)" : "translateY(0)";
        sticky.style.opacity   = e.isIntersecting ? "0" : "1";
      });
    },{threshold:.1}).observe(hero);

    // Share Logic
    const area=document.getElementById("msg");
    const name=document.getElementById("name");
    const preview=document.getElementById("preview");
    const wa=document.getElementById("wa");
    const mail=document.getElementById("mail");

    function buildURL(){
      const base=new URL("https://heikohaerter.com");
      base.searchParams.set("utm_source","weitergeben");
      base.searchParams.set("utm_medium","share");
      return base.toString();
    }
    function variants(){
      try{ return JSON.parse(area.dataset.variants); }catch(e){ return {neutral:["{{URL}}"]}; }
    }
    function pick(seg){
      const sets=variants();
      const pool=sets[seg] || sets["neutral"];
      return pool[Math.floor(Math.random()*pool.length)];
    }
    function detectSeg(){
      const raw=(name.value||"").toLowerCase();
      if(/(papa|mama|eltern|kind)/.test(raw)) return "eltern";
      if(/(chef|kolleg|team)/.test(raw)) return "kollegen";
      if(/(freund|kumpel|bff)/.test(raw)) return "freunde";
      if(/(selbst|freelance)/.test(raw)) return "selbst";
      if(/(partner|ehe)/.test(raw)) return "partner";
      return "neutral";
    }
    function generate(){
      const url=buildURL();
      const seg=detectSeg();
      const msg=pick(seg).replace("{{URL}}",url);
      area.value=msg;
      preview.textContent=msg;
      wa.href="https://wa.me/?text="+encodeURIComponent(msg);
      mail.href="mailto:?subject=Kurzer Blick&body="+encodeURIComponent(msg);
    }
    document.getElementById("gen").onclick=generate;
    document.getElementById("copy").onclick=()=>navigator.clipboard.writeText(area.value);
  </script>

